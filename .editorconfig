root = true

[*]
charset = utf-8
end_of_line = lf

[*.{cs,cshtml}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.{scss,js}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.sln]
indent_style = tab
indent_size = 8
trim_trailing_whitespace = true
insert_final_newline = false

[*.csproj]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = false

[*.cmd]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.{json,yml,svg}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
insert_final_newline = true
