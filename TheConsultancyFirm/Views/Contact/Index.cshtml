@{
    ViewBag.Title = "Contact";
    Layout = "_Layout";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
    <li class="breadcrumb-item active">Contact</li>
</ol>

<div class="container-fluid">
    
</div>

<div class="container">
    <div class="row">
        <div class="col text-center mb-4">
            <h3>Of stuur ons direct een bericht</h3>
        </div>
    </div>

    <form id="contact">
        <div class="form-row">
            <div class="col-2"></div>
            <div class="form-group col-4">
                <input type="text" class="form-control" id="name" name="name" placeholder="Naam" required />
            </div>
            <div class="form-group col-4">
                <input type="email" class="form-control" id="email" name="email" placeholder="Email" required/>
            </div>
        </div>

        <div class="form-row">
            <div class="col-2"></div>
            <div class="form-group col-4">
                <input type="tel" class="form-control" id="phone" name="phone" placeholder="Mobiel"/>
            </div>
            <div class="form-group col-4">
                <select class="form-control" id="subject" name="subject">
                    <option value="">Onderwerp</option>
                    <option value="anders">Anders</option>
                </select>
            </div>
        </div>

        <div class="form-row">
            <div class="col-2"></div>
            <div class="form-group col-8">
                <textarea class="form-control" name="message" id="message" placeholder="Bericht" rows="5"></textarea>
            </div>
        </div>

        <div class="form-row">
            <div class="col-2"></div>
            <div class="col-8">
                <button class="buttonHover" type="submit">VERSTUUR</button>
            </div>
        </div>
    </form>
</div>
