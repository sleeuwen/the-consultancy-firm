@{
    ViewData["Title"] = "Home Page";
}

<div class="fluid-container body-content">
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            @for (int i = 1; i < 2; i++)
            {
            <div class="carousel-item active">
                    <img src="~/images/home/headerCarousel/banner1.svg" alt="Zes miljoen pagina's minder printen dankzij StreamServe" class="d-block w-100" />
                    <div class="carousel-caption" role="option">
                        <span>Banque Artesia</span>
                        <h1>"Zes miljoen pagina's minder printen dankzij StreamServe</h1>
                        <div class="carousel-item-links">
                            <a class="buttonHover">BEKIJK CASES</a>
                            <a class="italic-link">Of ga naar alle cases <img class="arrow" src="~/images/right-arrow.svg" alt="Of ga naar alle case's'" /></a>
                        </div>
                    </div>
                    <div class="carousel-skip-cases">
                        <img src="~/images/skip-cases-arrow.PNG" />
                        <a href="#solutions">Skip cases</a>
                    </div>
                </div>
            }
        </div>
    </div>
    <!--
        Hier komt de Your guide to the ... partial    
    -->
    <div id="solutions" class="container home-content">
        <div class="row">
            <h2>Naadloos aansluiten op uw ICT-omgeving</h2>
        </div>
        <div class="row">
            <p>The Consultancy Firm biedt een complete, geïntegreerde, oplossing die de drie elementen van documentmanagment omvat: compositie, procesautomatisering en output</p>
        </div>
    </div>
    <div class="container home-content">
        <div id="solutions-carousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner" role="listbox">
                @for (int i = 1; i < 2; i++)
                {
                    <div class="carousel-item active">
                        <div class="row">
                            <div class="col afbeelding">
                                <img src="~/images/home/solutionsCarousel/document-wizard-image.png" alt="Document Wizard"/>
                            </div>
                            <div class="col content">
                                <div class="carousel-navigation">
                                    <a href="#solutions-carousel" class="fa fa-arrow-left" aria-hidden="true" role="button" data-slide="prev"></a>
                                    <a href="#solutions-carousel" class="fa fa-arrow-right" aria-hidden="true" role="button" data-slide="next"></a>
                                </div>
                                <div class="title">
                                    <h3>Document Wizard</h3>
                                    <span class="count">1/3</span>
                                </div>
                                <div class="description">
                                    <p>Uw klant heeft de behoefte om persoonlijk met u te communiceren.. 
                                    Maar maatwerk voor iedere klant is toch kostbaar en tijdrovend? Niet met The Document Wizard. Sluit uw bestaande administraties en workflow systemen moeiteloos aan op onze correspondentie software. Zo kan het verbeteren van uw klantrelatie beginnen!</p>
                                </div>
                                <div>
                                    <a class="buttonHover">LEES MEER</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
