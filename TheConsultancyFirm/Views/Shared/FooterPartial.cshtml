@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "FooterPartial";
}

<footer class="main">
    <div class="container">
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-3">
                <h3>tcf.</h3>
                <ul>
                    <li><a asp-controller="Cases" asp-action="Index">@Localizer["casesFooter"]</a></li>
                    <li><a asp-controller="About" asp-action="Index">@Localizer["about_tcf"]</a></li>
                    <li><a asp-controller="NewsItems" asp-action="Index">@Localizer["newsFooter"]</a></li>
                    <li><a asp-controller="Downloads" asp-action="Index">@Localizer["downloadsFooter"]</a></li>
                </ul>
            </div>
            <div class="col-md-4">
                <h3>Solutions.</h3>
                <ul>
                    @await Component.InvokeAsync("Solution")
                    <li style="font-style: italic;">
                        <a asp-controller="Solutions" asp-action="Index">
                            @Localizer["all_solutions"]
                            <img src="~/images/right-arrow.svg" alt="laad niet" class="arrow">
                        </a>
                    </li>
                </ul>
            </div>
            <div class="col-md-4">
                <h3>@Localizer["address"]</h3>
                <p>
                    Cypresbaan 47, 2908 LT
                    <br> Capelle aan den IJssel
                    <br> 010 - 264 01 44
                    <br> info@theconsultancyfirm.com
                    <br>
                </p>
                <p style="font-style: italic;">
                    <a asp-controller="Contact" asp-action="Index">
                        @Localizer["go_to_contact"]
                        <img src="~/images/right-arrow.svg" alt="laad niet" class="arrow">
                    </a>
                </p>
            </div>
        </div>
        <div class="row" id="FooterBottomRow">
            <div class="col-md-1"></div>
            <div class="col-md-3">
                <p style="font-style: italic;">
                    @Localizer["platinum_partner"]
                </p>
            </div>
            <div class="col-md-4">
                <div class="box">
                    <p>
                        <a class="buttonHover">@Localizer["customer_care"]</a>
                    </p>
                </div>
            </div>
            <div class="col-md-4" id="FooterSocialColum">
                <ul class="social-media">
                    <li><a href="#"><i class="fa fa-linkedin"></i> LinkedIn</a></li>
                    <li><a href="#"><i class="fa fa-twitter"></i> Twitter</a></li>
                </ul>
            </div>
        </div>
    </div>
</footer>
