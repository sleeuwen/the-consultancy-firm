@{
    ViewData["Title"] = "Over ons";
}
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
    <li class="breadcrumb-item active">Over ons</li>
</ol>
<div class="container-fluid">
    <div class="pageHeader">
        <img class="headerImage" src="images/header-image.jpg" alt="Header Image" />
        <div class="overlay"></div>
        <div class="centered">
            <h1>
                Individuele benadering voor<br />
                je gehele klantenkring!
            </h1>
        </div>
    </div>
</div>
<div class="container">
    @Html.Partial("UltimateJourneyPartial")
</div>
<div class="container container-wide mb-5">
    <div class="row mb-3">
        <div class="col text-center">
            <h2>Het team dat altijd voor je klaar staat</h2>
        </div>
    </div>

    <div class="row carousel-horizontal">
        <div class="col-12 col-lg-10">
            <div id="aboutCarousel" class="carousel slide" data-ride="carousel" data-interval="false">
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <img src="~/images/home/headerCarousel/banner1.svg" alt="ASP.NET" class="d-block"/>
                    </div>
                    <div class="carousel-item">
                        <video controls>
                            <source src="https://www.webbeat.nl/Content/media/webbeat-home-05.mp4" type="video/mp4">
                        </video>
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/home/headerCarousel/banner3.svg" alt="Package Management" class="d-block"/>
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/home/headerCarousel/banner4.svg" alt="Microsoft Azure" class="d-block"/>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-2 carousel-aside">
            <div class="carousel-navigation">
                <a href="#aboutCarousel" class="fa fa-arrow-left" aria-hidden="true" role="button" data-slide="prev"></a>
                <a href="#aboutCarousel" class="fa fa-arrow-right" aria-hidden="true" role="button" data-slide="next"></a>
            </div>

            <div class="carousel slide data-ride=carousel" data-interval="6000" data-carousel-follow="aboutCarousel">
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <div class="carousel-caption" role="option">
                            <p>Test</p>
                        </div>
                    </div>

                    <div class="carousel-item">
                        <div class="carousel-caption" role="option">
                            <p>There are powerful new features in Visual Studio for building modern web apps.</p>
                        </div>
                    </div>

                    <div class="carousel-item">
                        <div class="carousel-caption" role="option">
                            <p>Bring in libraries from NuGet and npm, and automate tasks using Grunt or Gulp.</p>
                        </div>
                    </div>

                    <div class="carousel-item">
                        <div class="carousel-caption" role="option">
                            <p>
                                Learn how Microsoft's Azure cloud platform allows you to build, deploy, and scale web
                                apps.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


