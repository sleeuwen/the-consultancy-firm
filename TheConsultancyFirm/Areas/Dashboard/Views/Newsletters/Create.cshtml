@model TheConsultancyFirm.Models.Newsletter

@{
    ViewData["Title"] = "Create";
}

<h2>@ViewBag.Title</h2>

<h4>Newsletter</h4>
<hr />

<form asp-action="Send" class="newsletter">
    <div class="row">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Subject"></label>
                <input asp-for="Subject" class="form-control" placeholder="Onderwerp" />
                <span asp-validation-for="Subject" class="invalid-feedback d-block"></span>
            </div>

            <div class="form-group">
                <label asp-for="NewsletterIntroText"></label>
                <textarea asp-for="NewsletterIntroText" class="form-control" id="NewsletterIntro"></textarea>

                <span asp-validation-for="NewsletterIntroText" class="invalid-feedback d-block"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsletterOtherNews"></label>
                <textarea asp-for="NewsletterOtherNews" class="form-control" id="NewsletterOtherNews"></textarea>

                <span asp-validation-for="NewsletterOtherNews" class="invalid-feedback d-block"></span>
            </div>
        </div>
        <div class="col-md-6">
            <h4>Nieuwsbrief preview:</h4>
            <iframe src="~/MailTemplate.html" id ="newsletterPreview" width="100%", height="100%"></iframe>
        </div>
    </div>
    <div id="newsLetterFooter">
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        <div class="form-group">
            <input type="submit" value="Versturen" class="btn btn-secondary"/>
        </div>
    </div>
</form>
