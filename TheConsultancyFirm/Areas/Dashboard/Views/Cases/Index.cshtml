@model PaginatedList<Case>

@{
    ViewData["Title"] = "Cases";
}

<h2>@ViewBag.Title</h2>

@Html.Partial("IndexButtonsPartial")
<form asp-action="Index" method="get">
    <div class="row mb-3 mt-3">
        <div class="col-4">
            <input type="hidden" value="@ViewBag.ShowDisabled.ToString()" name="showDisabled" />

            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search" id="txtSearch" name="SearchString" value="@ViewData["currentFilter"]"/>
                <div class="input-group-btn">
                    <button class="btn btn-secondary" type="submit">
                        <span class="fa fa-search"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    @*<div class="form-actions no-color">
        <p>
            Find by title: <input type="text" name="SearchString" value="@ViewData["currentFilter"]"/>
            <input type="submit" value="Search" class="btn btn-default"/> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>*@
</form>

<table class="table">
    <thead>
    <tr>
        <th>
            <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" asp-route-showDisabled="@ViewBag.ShowDisabled">Title</a>
        </th>
        <th>
            <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" asp-route-showDisabled="@ViewBag.ShowDisabled">Date</a>
        </th>
        <th>
            <a asp-action="Index" asp-route-sortOrder="@ViewData["LastModifiedSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" asp-route-showDisabled="@ViewBag.ShowDisabled">Last Modified</a>

        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr class="@(item.Enabled ? "" : "disabled")">
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastModified)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Aanpassen</a> |
                <a asp-area="" asp-controller="Cases" asp-action="Details" asp-route-id="@item.Id" target="_blank">Bekijken</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Verwijderen</a> |
                <a asp-action="ToggleEnable" asp-route-id="@item.Id">@(item.Enabled ? "Disable" : "Enable")</a>

            </td>
        </tr>
    }
    </tbody>
</table>
@{
    var prevDisabled = !Model.HasPreviousPage ? "d-none" : "";
    var nextDisabled = !Model.HasNextPage ? "d-none" : "";
}

<div class="row">
    <div class="col-sm-12 paging downloadpaging" id="paging">
        <div>
            <a asp-action="Index"
                        asp-route-sortOrder="@ViewData["CurrentSort"]"
                        asp-route-page="@(Model.PageIndex - 1)"
                        asp-route-currentFilter="@ViewData["CurrentFilter"]"
                        asp-route-showDisabled="@ViewBag.ShowDisabled"
                        class="fa fa-arrow-left pagearrow @prevDisabled"
                        aria-hidden="true">
            </a>
        </div>

        <ul>
            @if (Model.PageIndex - 2 > 0)
            {
                <li>
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                       asp-route-page="@(Model.PageIndex - 2)"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       asp-route-showDisabled="@ViewBag.ShowDisabled"
                       class="btn btn-default">
                        @(Model.PageIndex - 2)
                    </a>
                </li>
            }
            @if (Model.HasPreviousPage)
            {
                <li>
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                       asp-route-page="@(Model.PageIndex - 1)"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       asp-route-showDisabled="@ViewBag.ShowDisabled"
                       class="btn btn-defaul">
                        @(Model.PageIndex - 1)
                    </a>
                </li>
            }
            <li>
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-page="@(Model.PageIndex)"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   asp-route-showDisabled="@ViewBag.ShowDisabled"
                   class="btn btn-default disabled">
                    @(Model.PageIndex)
                </a>
            </li>
            @if (Model.HasNextPage)
            {
                <li>
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                       asp-route-page="@(Model.PageIndex + 1)"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       asp-route-showDisabled="@ViewBag.ShowDisabled"
                       class="btn btn-default">
                        @(Model.PageIndex + 1)
                    </a>
                </li>
            }
            @if (Model.PageIndex + 2 <= Model.TotalPages)
            {
                <li>
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                       asp-route-page="@(Model.PageIndex + 2)"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       asp-route-showDisabled="@ViewBag.ShowDisabled"
                       class="btn btn-default">
                        @(Model.PageIndex + 2)
                    </a>
                </li>
            }
        </ul>
        <div>
            <a asp-action="Index"
               asp-route-sortOrder="@ViewData["CurrentSort"]"
               asp-route-page="@(Model.PageIndex + 1)"
               asp-route-currentFilter="@ViewData["CurrentFilter"]"
               asp-route-showDisabled="@ViewBag.ShowDisabled"
               class="fa fa-arrow-right pagearrow @nextDisabled"
               aria-hidden="true">
            </a>
        </div>
    </div>
</div>
