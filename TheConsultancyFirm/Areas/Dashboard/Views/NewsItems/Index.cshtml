@model NewsItemViewModel

@{
    ViewData["Title"] = "Nieuwsitems";
}

<h2>@ViewBag.Title</h2>

@Html.Partial("IndexButtonsPartial", Model.NewsItemsWithoutTranslation)

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => new NewsItem().Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => new NewsItem().Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => new NewsItem().LastModified)
            </th>
            <th>
                @Html.DisplayNameFor(model => new NewsItem().Language)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.NewsItemsList)
        {
            <tr class="@(item.Enabled ? "" : "disabled")">
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastModified)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Language)
                </td>
                <td>
                    <a asp-action="@(item.Language == "en" ? "TranslationEdit" : "Edit")" asp-route-id="@item.Id">Aanpassen</a> |
                    <a asp-area="" asp-controller="NewsItems" asp-action="Details" asp-route-id="@item.Id" target="_blank">Bekijken</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Verwijderen</a> |
                    <a asp-action="ToggleEnable" asp-route-id="@item.Id">@(item.Enabled ? "Disable" : "Enable")</a>
                </td>
            </tr>
        }
    </tbody>
</table>
