@model IEnumerable<Customer>
@{
    ViewData["Title"] = "Verwijderde customers";
}

<h2>@ViewBag.Title</h2>

<p>
    <a asp-action="Index">Terug naar Customers</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Link)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="@(item.Enabled ? "" : "disabled")">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Link)
            </td>
            <td>
                <a asp-action="Restore" asp-route-id="@item.Id" onclick="return confirm('Weet u zeker dat u de customer wilt restoren?')">Restore</a>
            </td>
        </tr>
}
    </tbody>
</table>
