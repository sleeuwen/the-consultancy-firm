@model TheConsultancyFirm.Models.CarouselBlock

<div class="row">
    <div class=" col-md-12 block carousel-block" data-id="@Model.Id">
        <div class="block-header">
            <img class="handle" src="~/images/dragndrop-handle.svg" />

            <span class="expand"></span>

            <strong>Carousel:</strong>
            <span class="block-title">@(Model?.LinkText ?? "")</span>

            <span class="modifiedat" title="Last modified date">
                @Model.LastModified.ToString("dd MMM, yyyy HH:mm")
            </span>

            <span class="delete"></span>
        </div>
        <div class="block-content">
            <form asp-controller="Blocks" asp-action="Carousel" enctype="multipart/form-data">
                <input type="hidden" name="type" value="carousel" />
                <input type="hidden" name="Id" value="@Model.Id" />
                <input type="hidden" asp-for="Date" />
                <input type="hidden" asp-for="Order" />

                <div class="row mb-3">
                    <div class="col">
                        <label asp-for="LinkText">Text</label>
                        <input asp-for="LinkText" class="form-control" />
                    </div>
                    <div class="col">
                        <label asp-for="LinkPath">URL</label>
                        <input asp-for="LinkPath" class="form-control" />
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <div class="slides">
                            <nav>
                                <div class="nav nav-tabs" id="carousel-tabs" role="tablist">
                                    @for (var i = 0; i < (Model.Slides ?? new List<Slide>()).Count; i++)
                                    {
                                        <a class="nav-item nav-link @(i == 0 ? "active" : "")" id="carousel-nav-slide-@i" data-toggle="tab" role="tab" href="#carousel-tab-slide-i">
                                            Slide @(i + 1)
                                            <i class="fa fa-times"></i>
                                        </a>
                                    }
                                    <a class="nav-item nav-link" href="#" id="add-slide"><i class="fa fa-plus"></i></a>
                                </div>
                            </nav>
                            <div class="tab-content" id="carousel-content-@Model.Id">
                                @for (var i = 0; i < (Model.Slides ?? new List<Slide>()).Count; i++)
                                {
                                    <div class="tab-pane fade show @(i == 0 ? "active" : "")" id="carousel-tab-slide-@i" role="tabpanel" data-id="@Model.Slides[i].Id">
                                        <div class="row">
                                            <div class="col-8">
                                                <div class="box">
                                                    <div class="box__input">
                                                        <svg class="box__icon" xmlns="http://www.w3.org/2000/svg" width="50" height="43" viewBox="0 0 50 43">
                                                            <path d="M48.4 26.5c-.9 0-1.7.7-1.7 1.7v11.6h-43.3v-11.6c0-.9-.7-1.7-1.7-1.7s-1.7.7-1.7 1.7v13.2c0 .9.7 1.7 1.7 1.7h46.7c.9 0 1.7-.7 1.7-1.7v-13.2c0-1-.7-1.7-1.7-1.7zm-24.5 6.1c.3.3.8.5 1.2.5.4 0 .9-.2 1.2-.5l10-11.6c.7-.7.7-1.7 0-2.4s-1.7-.7-2.4 0l-7.1 8.3v-25.3c0-.9-.7-1.7-1.7-1.7s-1.7.7-1.7 1.7v25.3l-7.1-8.3c-.7-.7-1.7-.7-2.4 0s-.7 1.7 0 2.4l10 11.6z"></path>
                                                        </svg>
                                                        <input asp-for="Slides[i].PhotoPath" type="hidden" />
                                                        <input class="box__file" accept="image/png,image/jpeg" asp-for="Slides[i].Image">
                                                        <label asp-for="Slides[i].Image"><strong>Choose a file</strong><span class="box__dragndrop"> or drag it here</span>.</label>
                                                    </div>

                                                    <div class="box__uploading">Uploading…</div>
                                                    <div class="box__success">Done! <a class="box__restart" role="button">Upload more?</a></div>
                                                    <div class="box__error">Error! <span></span>. <a class="box__restart" role="button">Try again!</a></div>
                                                </div>
                                            </div>

                                            <div class="col-4">
                                                <label>Description</label>
                                                <textarea class="carousel-description form-control" placeholder="Place carousel slide text here" asp-for="Slides[i].Text"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
